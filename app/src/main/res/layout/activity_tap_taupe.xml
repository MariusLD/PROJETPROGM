<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TapTaupe">


    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score :0"
        app:layout_constraintBottom_toTopOf="@+id/b7"
        app:layout_constraintEnd_toStartOf="@+id/vie"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.099" />

    <TextView
        android:id="@+id/vie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="vie : 3"
        app:layout_constraintBottom_toTopOf="@+id/b8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.933"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.099" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="310dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/b7"
                android:layout_width="157dp"
                android:layout_height="119dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/mole_hole_illustration_clipart_image_210307988" />

            <ImageButton
                android:id="@+id/b8"
                android:layout_width="157dp"
                android:layout_height="119dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/mole_hole_illustration_clipart_image_210307988" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="314dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/b5"
                android:layout_width="157dp"
                android:layout_height="119dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/mole_hole_illustration_clipart_image_210307988" />

            <ImageButton
                android:id="@+id/b6"
                android:layout_width="157dp"
                android:layout_height="119dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/mole_hole_illustration_clipart_image_210307988" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="318dp"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/b1"
                style="@style/Widget.AppCompat.ImageButton"
                android:layout_width="157dp"
                android:layout_height="119dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/mole_hole_illustration_clipart_image_210307988" />

            <ImageButton
                android:id="@+id/b2"
                android:layout_width="157dp"
                android:layout_height="119dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/mole_hole_illustration_clipart_image_210307988" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="316dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/b4"
                android:layout_width="157dp"
                android:layout_height="119dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/mole_hole_illustration_clipart_image_210307988" />

            <ImageButton
                android:id="@+id/b3"
                android:layout_width="157dp"
                android:layout_height="119dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/mole_hole_illustration_clipart_image_210307988" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>